# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datatruth
POSTGRES_USER=datatruth_readonly
POSTGRES_PASSWORD=readonly_password_change_in_prod

# Admin Database User (for migrations only)
POSTGRES_ADMIN_USER=datatruth_admin
POSTGRES_ADMIN_PASSWORD=dev_password_change_in_prod

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # or gpt-4o, gpt-3.5-turbo (models that support JSON mode)
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# Or use Azure OpenAI
# AZURE_OPENAI_API_KEY=your_azure_key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=*

# Query Execution Limits
QUERY_TIMEOUT_SECONDS=30
QUERY_MAX_ROWS=10000
QUERY_MAX_RETRIES=3

# Semantic Layer Configuration
SEMANTIC_LAYER_PATH=./config/semantic-layer

# Audit Configuration
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=./logs/audit.log

# Redis Configuration (Phase 2)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache Configuration (Phase 2)
CACHE_ENABLED=false
CACHE_TTL_SECONDS=3600
